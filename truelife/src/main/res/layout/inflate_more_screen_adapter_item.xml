<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/inflate_menu_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_square_corner_transpernt_menu_list"
        android:orientation="horizontal"
        android:padding="@dimen/dimen_10">

        <ImageView
            android:id="@+id/inflate_menu_list_icon"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:contentDescription="@null"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_auotgraph" />

        <TextView
            android:id="@+id/inflate_menu_list_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center_vertical"
            android:padding="10dp"

            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/black"

            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/inflate_menu_right_arrow"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:layout_gravity="center"
            android:padding="3dp"
            android:rotation="180"
            android:src="@mipmap/ic_left_arrow"
            android:tint="@color/blue"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>