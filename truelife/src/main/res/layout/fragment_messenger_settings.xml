<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- set tool bar -->
    <include layout="@layout/app_chat_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen20"
        android:layout_marginRight="@dimen/dimen20"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/fragment_messenger_settings_privacy_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.80"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/labe_privacy"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:background="@null"
                android:contentDescription="@null"

                android:gravity="end"
                android:src="@drawable/ic_right_arrow"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_messenger_settings_block_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.80"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/labe_block_list"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal" />

            <ImageButton

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:background="@null"
                android:contentDescription="@null"

                android:gravity="end"
                android:src="@drawable/ic_right_arrow"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_messenger_settings_notification_LAY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.80"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/labe_notification"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal" />

            <ImageButton

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"


                android:background="@null"
                android:contentDescription="@null"


                android:gravity="end"
                android:src="@drawable/ic_right_arrow"
                android:visibility="visible" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_messenger_settings_file_LAY"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.80"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="@string/labe_file"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="normal" />


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:background="@null"
                android:contentDescription="@null"
                android:gravity="end"

                android:src="@drawable/ic_right_arrow"
                android:visibility="visible" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
