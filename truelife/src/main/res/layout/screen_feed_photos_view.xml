<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:id="@+id/screen_main_LAY"
    style="@style/photoViewScreen"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/black"
    android:clickable="true"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/screen_content_load_LAY"
        android:layout_width="fill_parent"

        android:layout_height="fill_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <com.truelife.app.touchimageview.TLExtendedViewPager
                    android:id="@+id/screen_gallery_view_VWPGR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/screen_gallery_view_VWIND"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/page_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/screen_gallery_view_VWIND"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold" />


               <!-- <com.rd.PageIndicatorView
                    android:id="@+id/screen_gallery_view_VWIND"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    app:piv_animationType="fill"
                    app:piv_selectedColor="@color/common_button_normal"
                    app:piv_unselectedColor="@color/white"
                    app:piv_viewPager="@+id/screen_gallery_view_VWPGR" />-->


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/close_club_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:background="@color/transparent"
                android:gravity="center|left">

                <ImageButton
                    android:id="@+id/inflate_alert_close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:background="@null"
                    android:gravity="center|left"
                    android:padding="10dp"
                    android:rotation="270"
                    android:src="@drawable/left_arrow"
                    android:tint="@color/white" />

            </LinearLayout>

        </FrameLayout>


    </LinearLayout>


</LinearLayout>



