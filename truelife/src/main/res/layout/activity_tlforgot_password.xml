<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_pass_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    android:clickable="true"
    android:orientation="horizontal"
    android:weightSum="3"
    tools:myContext="com.truelife.activities.TLForgotPasswordActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:clickable="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen30"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/activity_forgot_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:paddingLeft="20dp"
                        android:paddingBottom="5dp"
                        android:text="@string/label_sign_forgot_password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="80dp"
                        android:background="@android:color/white" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingTop="30dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/opensans_regular"
                        android:paddingLeft="10dp"
                        android:visibility="gone"
                        android:text="@string/label_e_mail_id"
                        android:textColor="@color/white"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:layout_marginTop="10dp"
                        android:background="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/email_or_mob_selection_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/selection_email_lay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/dimen_1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="E m a i l "
                                    android:textColor="@color/app_white" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/view_space_edit_text"
                                    android:background="@color/app_white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:text="Or" />

                            <LinearLayout
                                android:id="@+id/selection_mobile_lay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingBottom="@dimen/dimen_1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="P h o n e"
                                    android:textColor="@color/app_white" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="@dimen/view_space_edit_text"
                                    android:background="@color/app_white" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/email_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dimen7"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/activity_forgot_email_EDT"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.7"
                                android:background="@android:color/transparent"
                                android:hint="@string/label_email_sign_up"
                                android:imeOptions="actionSearch"
                                android:importantForAutofill="no"
                                android:inputType="textEmailAddress"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/app_white"
                                android:textColorHint="@color/app_white"
                                android:textCursorDrawable="@drawable/white_cursor"
                                android:textSize="@dimen/text_16"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/email_img"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:layout_weight=".20"
                                android:background="@drawable/bg_border_white"
                                android:padding="@dimen/dimen_1"
                                android:src="@drawable/ic_phone_tl" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mobile_lay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/dimen7"
                            android:visibility="gone">

                            <EditText
                                android:id="@+id/country_code_EDT"
                                android:layout_width="0dp"
                                android:editable="false"
                                android:focusable="false"
                                android:layout_height="wrap_content"
                                android:hint="Country\nCode"
                                android:layout_weight=".4"
                                android:textStyle="bold"
                                android:background="@android:color/transparent"
                                android:textSize="@dimen/text_10"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textColor="@color/app_white"
                                android:textColorHint="@color/app_white"
                                android:maxLines="2"
                                android:textCursorDrawable="@drawable/white_cursor"
                                />

                            <EditText
                                android:id="@+id/activity_signup_EDT_mobile"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="1.7"
                                android:background="@android:color/transparent"
                                android:hint="@string/label_mobile_sign_up"
                                android:imeOptions="actionSearch"
                                android:importantForAutofill="no"
                                android:inputType="phone"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:singleLine="true"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/app_white"
                                android:textColorHint="@color/app_white"
                                android:textCursorDrawable="@drawable/white_cursor"
                                android:textSize="@dimen/text_16"
                                android:textStyle="normal" />

                            <ImageView
                                android:id="@+id/mobile_img"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:layout_weight=".20"
                                android:background="@drawable/bg_border_white"
                                android:padding="@dimen/dimen_1"
                                android:src="@drawable/ic_mail" />
                        </LinearLayout>
                        <View
                            android:visibility="gone"
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/otp_lay"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="@dimen/dimen10"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/otp_edt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1.7"
                            android:background="@android:color/transparent"
                            android:hint="@string/label_otp"
                            android:imeOptions="actionSearch"
                            android:importantForAutofill="no"
                            android:inputType="textEmailAddress"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:singleLine="true"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/app_white"
                            android:textColorHint="@color/app_white"
                            android:textCursorDrawable="@drawable/white_cursor"
                            android:textSize="@dimen/text_16"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/resend_otp_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:text="@string/the_otp_resent"
                            android:padding="@dimen/dimen_1"
                            />
                    </LinearLayout>
                    <View
                        android:id="@+id/otp_lay_line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@android:color/white" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">

                    <RelativeLayout
                        android:id="@+id/activity_forgot_submit_RV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_round_corner"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center">


                        <Button
                            android:id="@+id/activity_forgot_submit_BUT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/opensans_regular"
                            android:text="@string/the_otp_sent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/activity_already_sign_TXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/opensans_semibold"
                        android:gravity="center"
                        android:text="@string/label_already_signed_up"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12"
                        android:textStyle="normal" />


                    <View
                        android:layout_width="0.75dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimen10"
                        android:layout_marginTop="@dimen/dimen2"
                        android:layout_marginEnd="@dimen/dimen10"
                        android:layout_marginBottom="@dimen/dimen2"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/activity_log_in_TXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensans_semibold"
                            android:gravity="center"
                            android:text="@string/login_space"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font12_5"
                            android:textStyle="normal" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.75dp"
                            android:layout_marginTop="2dp"
                            android:background="@color/white" />


                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/activity_vip_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen20">

                    <RelativeLayout
                        android:id="@+id/activity_vip_RV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_square_corner_sign_up"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@color/transparent"
                            android:fontFamily="@font/opensans_regular"
                            android:gravity="center"

                            android:text="@string/label_celebrity_vip_registration"
                            android:textColor="@color/white_login"
                            android:textSize="@dimen/font12"
                            android:textStyle="normal" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5" />

</LinearLayout>