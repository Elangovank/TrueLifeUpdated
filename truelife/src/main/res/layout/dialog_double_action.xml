<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_view_white"
            android:layout_margin="10dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/dialog_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DialogTitle"/>

        <TextView
                android:id="@+id/dialog_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/DialogMessage"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/dialog_action_negative"
                    android:background="@drawable/bg_circle_gray"
                    style="@style/DialogButton_Double"/>

            <TextView
                    android:id="@+id/dialog_action_positive"
                    android:background="@drawable/bg_circle_blue"
                    style="@style/DialogButton_Double"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
            android:id="@+id/dialog_close_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@mipmap/ic_delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>