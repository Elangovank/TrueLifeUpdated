<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_welcome2_parent_layout_RLAY"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setting_report_bg"
    android:clickable="true"
    android:fitsSystemWindows="true">


    <androidx.cardview.widget.CardView

        android:id="@+id/inflate_settings_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true">


            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true">


                    <ImageView
                        android:id="@+id/common_back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"

                        android:gravity="left"
                        android:src="@drawable/ic_back"
                        android:tint="@color/black" />


                    <TextView
                        android:id="@+id/set_personal_header"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left"
                        android:layout_toEndOf="@+id/common_back_arrow"
                        android:layout_toRightOf="@+id/common_back_arrow"
                        android:fontFamily="@string/opensans_semi_bold"
                        android:gravity="left|center"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="@dimen/text_20" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_notify_friend_list_Search_LAY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp">


                <TextView
                    android:id="@+id/account_setting_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/opensans_regular"
                    android:text="@string/label_personal_setting_info"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_notify_friend_list_Search_LAY"
                android:background="@android:color/white"
                android:clickable="true"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                android:paddingTop="10dp">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:orientation="vertical"
                                android:weightSum="2">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_3"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:text="@string/label_door_no"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/text_17" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_door_no"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_50_setting"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_edit_corner_for_setting"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:importantForAutofill="no"
                                    android:maxLength="100"
                                    android:paddingStart="@dimen/dimen_15"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="normal" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:orientation="vertical"
                                android:weightSum="2">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_3"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:text="@string/label_Street_no"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/text_17" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_street_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_50_setting"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_edit_corner_for_setting"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:importantForAutofill="no"
                                    android:maxLength="100"
                                    android:paddingStart="@dimen/dimen_15"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:orientation="vertical"
                                android:weightSum="2">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_3"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:text="@string/label_rest_address"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/text_17" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_50_setting"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_edit_corner_for_setting"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:importantForAutofill="no"
                                    android:inputType="textMultiLine"
                                    android:maxLength="500"
                                    android:maxLines="6"
                                    android:paddingStart="@dimen/dimen_15"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_16"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.8"
                                    android:gravity="left|center"
                                    android:text="@string/label_country"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <EditText

                                    android:id="@+id/fragment_setting_personal_country"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dimen10"
                                    android:layout_weight="2.2"
                                    android:background="@drawable/setting_outline"
                                    android:drawableRight="@drawable/ic_drop_down"
                                    android:drawableTint="@color/dark_grey"
                                    android:editable="false"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:padding="@dimen/dimen10"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/app_gray"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="0.8"
                                    android:gravity="left|center"
                                    android:text="@string/label_state"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_state"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dimen10"
                                    android:layout_weight="2.2"
                                    android:background="@drawable/setting_outline"
                                    android:drawableRight="@drawable/ic_drop_down"
                                    android:drawableTint="@color/dark_grey"
                                    android:editable="false"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:padding="@dimen/dimen10"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/app_gray"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="0.8"
                                    android:gravity="left|center"
                                    android:text="@string/label_current_city"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_current_city"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dimen10"
                                    android:layout_weight="2.2"
                                    android:background="@drawable/setting_outline"
                                    android:drawableRight="@drawable/ic_drop_down"
                                    android:drawableTint="@color/dark_grey"
                                    android:editable="false"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:padding="@dimen/dimen10"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/app_gray"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="0.8"

                                    android:gravity="left|center"
                                    android:text="@string/label_home_town"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_home_town"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dimen10"
                                    android:layout_weight="2.2"
                                    android:background="@drawable/setting_outline"

                                    android:drawableRight="@drawable/ic_drop_down"
                                    android:drawableTint="@color/dark_grey"
                                    android:editable="false"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:padding="@dimen/dimen10"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/app_gray"
                                    android:textStyle="normal" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="3">


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"

                                    android:layout_gravity="center"
                                    android:layout_weight="0.8"

                                    android:gravity="left|center"
                                    android:text="@string/label_pincode"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/fragment_setting_personal_pin_code"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="@dimen/dimen10"
                                    android:layout_weight="2.2"
                                    android:background="@drawable/setting_outline"
                                    android:fontFamily="@string/opensans_regular"
                                    android:gravity="left|center"
                                    android:importantForAutofill="no"
                                    android:inputType="number"
                                    android:maxLength="8"
                                    android:padding="@dimen/dimen10"
                                    android:textColor="@color/black"
                                    android:textStyle="normal" />

                            </LinearLayout>


                            <Button
                                android:id="@+id/privacy_setting_post_save_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/dimen10"
                                android:layout_marginBottom="@dimen/dimen30"
                                android:background="@drawable/set_report_button"
                                android:fontFamily="@string/opensans_regular"
                                android:gravity="center"
                                android:paddingStart="@dimen/dimen_30"
                                android:paddingEnd="@dimen/dimen_30"
                                android:text="@string/label_save"
                                android:textAllCaps="true"
                                android:textColor="@color/white" />


                        </LinearLayout>


                    </RelativeLayout>


                </ScrollView>


            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>