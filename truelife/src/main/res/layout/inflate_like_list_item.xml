<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/inflate_menu_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen10"
    android:paddingTop="@dimen/dimen5"
    android:paddingBottom="@dimen/dimen5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/inflate_menu_list_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_man_placeholder" />

    <TextView
        android:id="@+id/inflate_single_item_text"
        style="@style/CreateAccountSub"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dimen10"
        android:gravity="center_vertical"
        android:textColor="@color/app_blue_dark"
        android:textStyle="bold" />

</LinearLayout>