<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typing_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:orientation="horizontal"
    tools:showIn="@layout/content_chat">

    <ImageView
        android:id="@+id/img_attachment"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="@dimen/dimen_4"
        android:paddingStart="@dimen/dimen_4"
        app:srcCompat="@drawable/ic_attach_file" />

    <ImageView
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        app:tint="@color/black"
        android:visibility="gone"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_photo_camera" />

    <com.truelife.chat.views.ChatEditText
        android:textColor="@color/colorText"
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="1"
        android:minLines="2"
        android:paddingStart="@dimen/dimen10"
        android:padding="4dp"
        android:textCursorDrawable="@drawable/style_black_cursor"
        android:background="@drawable/bg_border_inside_trans_ten_radius"
        android:hint="@string/write_your_message"
        android:inputType="textCapSentences|textMultiLine"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/et_message_text_size" />

    <ImageView

        android:background="?attr/selectableItemBackgroundBorderless"
        android:id="@+id/emoji_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="5dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_chat_smile"
        app:tint="@color/black" />




</LinearLayout>