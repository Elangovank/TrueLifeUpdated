<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_autograph"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="@dimen/dimen30"
            android:layout_height="@dimen/dimen30"
            android:layout_marginLeft="@dimen/dimen10"
            android:layout_marginTop="@dimen/dimen_40"
            android:src="@drawable/profile_back_btn"
            android:tint="@color/orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_300"
            android:layout_marginTop="@dimen/dimen_40"
            android:layout_marginRight="@dimen/dimen_40"
            android:layout_marginBottom="@dimen/dimen_60"
            android:src="@drawable/ic_autograph_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_extrabold"
            android:gravity="center"
            android:text="A LITERARY CONTRIBUTION TO\nTO YOUR LEGACY"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen20"
            android:textStyle="bold" />

        <View
            android:layout_width="180dp"
            android:layout_height="@dimen/dimen2"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen10"
            android:layout_marginBottom="@dimen/dimen10"
            android:background="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:text="Ask questions to your friends and celebrities and mark the answers with their signatures. Look at yourself through your friend's views."
            android:textColor="@color/white"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen20"
        android:fontFamily="@font/opensans_extrabold"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_15"
        android:background="@drawable/bg_round_button_club"
        android:text="@string/coming_soon"
        android:textAllCaps="true"
        android:textColor="@color/app_red"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

</LinearLayout>