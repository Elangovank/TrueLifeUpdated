<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_otp_verify_root_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/close_club_button"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_close_without_circle"
                    android:tint="@color/black" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/otp_not_send" />


            <TextView
                android:id="@+id/otp_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_40"
                android:paddingRight="@dimen/dimen_40"
                android:textColor="@color/black"
                android:textSize="@dimen/font16"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginTop="20dp"
                android:layout_marginRight="@dimen/dimen_40"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/Club_member_LAY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dimen5"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/country_select"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_drop_down_otp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="India (91)"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font16" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/dimen5"
                        android:background="@color/grey" />


                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/member_visibility_LAY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dimen_40"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/dimen_40"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/mobile_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        android:cursorVisible="false"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="right"
                        android:paddingRight="@dimen/dimen_10"
                        android:hint="@string/label_enter_mobile_no"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:maxLength="13"
                        android:textColor="@color/black"
                        android:textColorHint="@color/dark_grey"
                        android:textSize="@dimen/font_18"
                        app:backgroundTint="@color/grey" />

                    <Button
                        android:id="@+id/send_otp_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:background="@null"
                        android:fontFamily="@font/opensans_regular"
                        android:gravity="center"
                        android:text="@string/label_otp_send"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font16"
                        android:textStyle="bold" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="vertical">


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>